extends ../inc/_layout.pug

block head
	- var _key_ = 'en';
	title!=lang[_key_].page_title

block content
	- var _key_ = 'en';

	header.l-container.c-page__header
		h1.c-page__title!=lang[_key_].page_title_h1
	main.l-container

		.l-row
			.l-col-6: form(action="#")
				textarea(autofocus disabled).js-src.c-textarea.c-textarea__left!=`:root {\n	--some-width: 150px;\n}\n\n.box-foo {\n	width: var(--some-width);\n}\n\n@media (max-width: 800px) {\n	.box-foo {\n		--some-width: 300px;\n	}\n}`
				.c-control
					button.c-btn.js-submit(disabled type="button")!=lang[_key_].Apply
					button.c-btn.js-reset(disabled type="reset")!=lang[_key_].Reset
					.c-options
						h2.c-options__title!=lang[_key_]['Options']
						label.c-options__preserve
							input(type="checkbox").js-preserve
							span!=lang[_key_].preserve_checkbox
						br
						textarea#_cv.c-options__vars.js-custom-variables(placeholder=`--color: red\n--color: gold !important\nspeed: 200ms /* equal --speed: 200ms*/`)
						label(for="_cv")!=lang[_key_].textarea_vars

			.l-col-6
				pre(contenteditable).c-textarea.c-textarea__right
					code.js-out.language-css
				.c-control
					button.c-btn.js-select-all(disabled type="button")!=lang[_key_]['Select result']


		section.c-section
			h2!=lang[_key_].what_is_title
			p!=lang[_key_].what_is_text




